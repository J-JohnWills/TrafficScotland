<ViewSwitcher xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/lookup_view_switch"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/lookup_view1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="10dp"
        tools:context=".controllers.LookupController">

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/lookup_text_view_filter_by_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Filter by date"
            app:layout_constraintTop_toTopOf="parent" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/lookup_date_layout"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:endIconDrawable="@drawable/ic_baseline_date_range_24"
            app:endIconMode="custom"
            app:errorEnabled="false"
            app:layout_constraintTop_toBottomOf="@+id/lookup_text_view_filter_by_date">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/lookup_date_field"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Choose a date"
                android:inputType="date"
                android:singleLine="true"
                android:visibility="visible" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/lookup_text_view_search_road"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:text="Search for a road"
            app:layout_constraintTop_toBottomOf="@+id/lookup_date_layout" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/lookup_search_layout"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:endIconDrawable="@drawable/outline_route_2_24"
            app:endIconMode="custom"
            app:errorEnabled="false"
            app:layout_constraintTop_toBottomOf="@id/lookup_text_view_search_road">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/lookup_search_field"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Search for road"
                android:inputType="text"
                android:singleLine="true"
                android:visibility="visible" />
        </com.google.android.material.textfield.TextInputLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="10dp"
            app:layout_constraintTop_toBottomOf="@+id/lookup_search_layout">


            <Button
                android:id="@+id/lookup_button_search"
                style="@style/Widget.MaterialComponents.Button"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.5"
                android:text="Search" />

            <TextView
                android:id="@+id/spacer"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".5" />


            <Button
                android:id="@+id/lookup_button_clear"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Clear"
                android:textColor="@color/design_default_color_error" />


        </LinearLayout>

        <!--        <Button-->
        <!--            android:id="@+id/lookup_button_search"-->
        <!--            android:layout_width="match_parent"-->
        <!--            android:layout_height="wrap_content"-->
        <!--            android:layout_marginTop="10dp"-->
        <!--            android:text="Search"-->
        <!--            app:layout_constraintTop_toBottomOf="@+id/lookup_search_layout" />-->
        <!--        <Button-->
        <!--            android:layout_width="match_parent"-->
        <!--            android:layout_height="wrap_content"-->
        <!--            android:id="@+id/lookup_clear_button"-->
        <!--            android:layout_marginTop="10dp"-->
        <!--            app:layout_constraintTop_toBottomOf="@id/lookup_search_layout"-->
        <!--            />-->

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/lookup_view2"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <Button
            android:id="@+id/lookup_button_return"
            style="@style/Widget.MaterialComponents.Button.Icon"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Back to search"
            app:icon="@drawable/ic_baseline_keyboard_return_24"
            app:layout_constraintTop_toTopOf="parent" />

        <ListView
            android:id="@+id/lookup_list_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/lookup_button_return" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</ViewSwitcher>

