<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/journey_planner_view_switcher"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:padding="20dp"
    tools:context=".controllers.JourneyPlannerController">

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/journey_planner_start_location_layout"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/journey_planner_edit_text_start"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Choose something"
            android:inputType="text" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/journey_planner_end_location_layout"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/journey_planner_start_location_layout">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/journey_planner_edit_text_end"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Choose something"
            android:inputType="text" />
    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:id="@+id/journey_planner_button_search"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Search"
        app:layout_constraintTop_toBottomOf="@+id/journey_planner_end_location_layout" />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="380dp"
        app:layout_constraintTop_toBottomOf="@id/journey_planner_button_search">

        <com.google.android.gms.maps.MapView
            android:id="@+id/journey_planner_map_view"
            android:name="com.google.android.gms.maps.MapView"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" />


    </androidx.cardview.widget.CardView>


</androidx.constraintlayout.widget.ConstraintLayout>